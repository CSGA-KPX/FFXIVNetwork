<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="nlog-internal.log" >

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target name="gamePacket" xsi:type="File" fileName="LoggingGamePacket.txt"
              deleteOldFileOnStartup="true" keepFileOpen="true"/>
    
    <target name="RawTCPPacket" xsi:type="File" fileName="LoggingRawTCPPacket.txt"
              deleteOldFileOnStartup="true" keepFileOpen="true"/>
    <target name="MainLogging"  xsi:type="File" fileName="LoggingMain.txt"
              deleteOldFileOnStartup="true" keepFileOpen="true"/>
    <target name="console" xsi:type="Console" />

    <target xsi:type="Null" name="BlackHole" formatMessage="false"  />
  </targets>

  <rules>
    <logger name="RawTCPPacket"                minlevel="Trace" writeTo="BlackHole" final="true" />
    <logger name="FFXIV.PacketHandlerBase*"    minlevel="Trace" writeTo="gamePacket"   final="true" />

    <logger name="*" minlevel="Trace" writeTo="MainLogging" />
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>